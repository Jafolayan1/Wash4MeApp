                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        </div>*@
                    </div>
                    <div class="table-responsive">
                        <table id="example" class="table table-striped" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Created By</th>
                                    <th>Created Date</th>
                                    <th>Last Modified</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ItemName</td>
                                        <td>@item.ItemAmount</td>
                                        <td>@item.CreatedBy</td>
                                        <td>@item.DateCreated.ToShortDateString()</td>
                                        <td>@item.DateModified.ToShortDateString()</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.ItemId">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.ItemId">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.ItemId">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
